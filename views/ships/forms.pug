extends ../base.pug

block content
  h3 #{action} ship
  form(method="POST")
    .form-group
      label(for="titles") Name
      input.form-control(type="text", name="name", id="name", value=ship.name)
    .form-group
      label(for="author") Type
      input.form-control(type="text", name="type", id="type", value=ship.type)
    .form-group
      label(for="publishedDate") Length
      input.form-control(type="text", name="length", id="length", value=ship.length)
    .form-group
     button.btn.btn-success(type="submit") Save
